<?xml version='1.0' encoding='utf-8'?>
<widget id="com.newsmute" version="2.0.0" xmlns="http://www.w3.org/ns/widgets">
    <name>News Mute</name>
    <description>
        News Mute speaks any website feed for you!
    </description>
    <author email="talktome@adimpression.mobi" href="http://Adimpression.mobi">
        Adimpression
    </author>
    <content src="index.html" />
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
    <feature name="TTS">
        <param name="android-package" value="com.phonegap.plugins.speech.TTS" />
    </feature>
    <feature name="Contacts">
        <param name="android-package" value="org.apache.cordova.contacts.ContactManager" />
    </feature>
    <feature name="SocialMessage">
        <param name="android-package" value="uk.co.ilee.socialmessage.SocialMessage" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <feature name="ValidEmail">
        <param name="android-package" value="ai.newsmute.ValidEmail" />
    </feature>
    <access origin="*" />
    <preference name="useBrowserHistory" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="fullscreen" value="false" />
    <preference name="errorUrl" value="file:///android_asset/www/error.html" />
    <preference name="loadingDialog" value="News Mute is muting news, please be silent meanwhile!" />
</widget>
